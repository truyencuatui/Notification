{
  "manifest_version": 2,
  "name": "Truyện Của Tui",
  "description": "Nhận thông báo từ http://truyencuatui.net/",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon-36x36.png",
    "default_title": "Truyện Của Tui"
  },
  "background": {
  	"scripts": [
  	  "background.js"
  	]
  },
  "permissions": [
  	"tabs",
  	"webRequest",
  	"notifications",
  	"*://truyencuatui.net/*"
  ]
}